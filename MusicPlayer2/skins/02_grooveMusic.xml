<root name="Groove音乐风格" xmlns="https://github.com/zhongyang219/MusicPlayer2/skin" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://github.com/zhongyang219/MusicPlayer2/skin https://github.com/zhongyang219/MusicPlayer2/raw/master/Documents/skin.xsd">
	<ui>
		<verticalLayout>
			<horizontalLayout>
				<verticalLayout width="48">
					<button key="menu" width="48" height="48"/>
					<button key="find" width="48" height="48"/>
					<button key="equalizer" width="48" height="48"/>
					<button key="info" width="48" height="48"/>
					<button key="mediaLib" width="48" height="48"/>
					<placeHolder/>
					<button key="settings" width="48" height="48"/>
				</verticalLayout>
				<verticalLayout>
					<rectangle no_corner_radius="true">
						<horizontalLayout>
							<albumCover square="true" margin="8" width="30%"/>
							<verticalLayout margin="8">
								<text type="title" style="scroll" height="38" font_size="12"/>
								<text type="artist" style="scroll" height="24" font_size="10"/>
								<text type="album" style="scroll" height="24" font_size="10"/>
								<placeHolder/>
								<horizontalLayout margin-bottom="8">
									<spectrum width="280" draw_reflex="false"/>
									<placeHolder/>
								</horizontalLayout>
								<text type="format" style="scroll" height="24"/>
							</verticalLayout>
						</horizontalLayout>
					</rectangle>
					<lyrics margin="4"/>
				</verticalLayout>
			</horizontalLayout>
			<rectangle height="88" no_corner_radius="true">
				<horizontalLayout>
					<albumCover width="88"/>
					<verticalLayout margin="4">
						<text type="title" style="scroll" height="24" font_size="10"/>
						<text type="artist" style="scroll" height="24"/>
					</verticalLayout>
					<verticalLayout>
						<horizontalLayout height="60">
							<button key="repeatMode" width="26" height="26" margin="2"/>
							<button key="previous" width="40" height="40" bigIcon="true" margin="2"/>
							<button key="playPause" width="40" height="40" bigIcon="true" margin="2"/>
							<button key="next" width="40" height="40" bigIcon="true" margin="2"/>
							<button key="favorite" width="26" height="26" margin="2"/>
						</horizontalLayout>
						<progressBar show_play_time="true"/>
					</verticalLayout>
					<horizontalLayout margin-right="4">
						<placeHolder/>
						<volume show_text="true" width="56" height="26" margin="2"/>
						<button key="showPlaylist" width="26" height="26" margin="2"/>
					</horizontalLayout>
				</horizontalLayout>
			</rectangle>
		</verticalLayout>
	</ui>


	<ui type="narrow">
		<verticalLayout>
			<horizontalLayout>
				<verticalLayout width="48">
					<button key="menu" width="48" height="48"/>
					<button key="find" width="48" height="48"/>
					<button key="equalizer" width="48" height="48"/>
					<button key="info" width="48" height="48"/>
					<button key="mediaLib" width="48" height="48"/>
					<placeHolder/>
					<button key="settings" width="48" height="48"/>
				</verticalLayout>
				<verticalLayout>
					<rectangle no_corner_radius="true">
						<horizontalLayout>
							<albumCover square="true" margin="8" width="30%"/>
							<verticalLayout margin="8">
								<text type="title" style="scroll" height="38" font_size="12"/>
								<text type="artist" style="scroll" height="24" font_size="10"/>
								<text type="album" style="scroll" height="24" font_size="10"/>
								<placeHolder/>
								<horizontalLayout margin-bottom="8">
									<spectrum width="280" draw_reflex="false"/>
									<placeHolder/>
								</horizontalLayout>
								<text type="format" style="scroll" height="24"/>
							</verticalLayout>
						</horizontalLayout>
					</rectangle>
					<lyrics margin="4"/>
				</verticalLayout>
			</horizontalLayout>
			<rectangle height="88" no_corner_radius="true">
				<verticalLayout margin="4">
					<horizontalLayout height="60">
						<button key="repeatMode" width="26" height="26" margin="2"/>
						<button key="favorite" width="26" height="26" margin="2"/>
						<button key="previous" width="40" height="40" bigIcon="true" margin="2"/>
						<button key="playPause" width="40" height="40" bigIcon="true" margin="2"/>
						<button key="next" width="40" height="40" bigIcon="true" margin="2"/>
						<volume show_text="false" width="26" height="26" margin="2"/>
						<button key="showPlaylist" width="26" height="26" margin="2"/>
					</horizontalLayout>
					<progressBar show_play_time="true"/>
				</verticalLayout>
			</rectangle>
		</verticalLayout>
	</ui>


	<ui type="small">
		<verticalLayout>
			<horizontalLayout>
				<albumCover width="112"/>
					<verticalLayout margin="4">
						<text type="title" style="scroll" height="24" font_size="11"/>
						<text type="artist" style="scroll" height="24" font_size="10"/>
						<text type="album" style="scroll" height="24" font_size="10"/>
						<text type="format" style="scroll" height="22"/>
					</verticalLayout>
			</horizontalLayout>
			<rectangle height="88" no_corner_radius="true">
				<verticalLayout margin="4">
					<horizontalLayout height="60">
						<button key="repeatMode" width="26" height="26" margin="2"/>
						<button key="favorite" width="26" height="26" margin="2"/>
						<button key="previous" width="40" height="40" bigIcon="true" margin="2"/>
						<button key="playPause" width="40" height="40" bigIcon="true" margin="2"/>
						<button key="next" width="40" height="40" bigIcon="true" margin="2"/>
						<volume show_text="false" width="26" height="26" margin="2"/>
						<button key="mediaLib" width="26" height="26" margin="2"/>
						<button key="showPlaylist" width="26" height="26" margin="2"/>
					</horizontalLayout>
					<progressBar show_play_time="true"/>
				</verticalLayout>
			</rectangle>
		</verticalLayout>
	</ui>

</root>
